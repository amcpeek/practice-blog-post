<div class="max-w-md mx-auto bg-white rounded-lg shadow-md p-8">
  <h1 class="text-3xl font-bold text-gray-800 mb-6">Login</h1>

  <%= form_with url: login_path, method: :post, class: "space-y-4" do |f| %>
    <div>
      <%= f.label :email, "Email Address", class: "block text-sm font-medium text-gray-700 mb-2" %>
      <%= f.email_field :email,
          placeholder: "your.email@riversidehigh.edu",
          required: true,
          class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
      <p class="text-sm text-gray-500 mt-1">Enter your Riverside High School email</p>
    </div>

    <%= f.submit "Login", class: "w-full bg-blue-600 text-white font-semibold py-2 px-4 rounded-lg hover:bg-blue-700 transition" %>
  <% end %>
</div>
