<%= form_with model: post, class: "space-y-6" do |f| %>
  <% if post.errors.any? %>
    <div class="bg-red-100 border border-red-400 text-red-700 px-4 py-3 rounded">
      <h3 class="font-bold mb-2"><%= pluralize(post.errors.count, "error") %> prohibited this post from being saved:</h3>
      <ul class="list-disc list-inside">
        <% post.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div>
    <%= f.label :title, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_field :title,
        placeholder: "Enter post title...",
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div>
    <%= f.label :body, class: "block text-sm font-medium text-gray-700 mb-2" %>
    <%= f.text_area :body,
        rows: 15,
        placeholder: "Write your post content...",
        class: "w-full px-4 py-2 border border-gray-300 rounded-lg focus:ring-2 focus:ring-blue-500 focus:border-blue-500" %>
  </div>

  <div class="bg-gray-50 p-4 rounded-lg">
    <label class="flex items-center space-x-3">
      <%= f.check_box :published_at,
          { checked: post.published?, class: "h-5 w-5 text-blue-600 rounded" },
          Time.current,
          nil %>
      <span class="text-gray-700">
        <span class="font-medium">Publish this post</span>
        <span class="block text-sm text-gray-500">Uncheck to save as draft</span>
      </span>
    </label>
  </div>

  <div class="flex space-x-3">
    <%= f.submit class: "bg-blue-600 text-white px-6 py-2 rounded-lg hover:bg-blue-700 font-semibold" %>
    <%= link_to "Cancel", post.persisted? ? post : root_path, class: "bg-gray-300 text-gray-700 px-6 py-2 rounded-lg hover:bg-gray-400" %>
  </div>
<% end %>
